# Risk thresholds
# 30-day drawdown thresholds
DD_WARN_PCT=0.15
DD_HALT_PCT=0.20
# Flash-crash: pause if 1h drop exceeds this fraction (0.30 = 30%)
FLASH_CRASH_PCT=0.30
# 1-day VaR limit (0.05 = 5%)
VAR_1D_MAX=0.05
# Kill-switch triggers after this many breaches in 24h
KILL_SWITCH_BREACHES=3

# Allowed symbols (comma-separated). Accepts BASE or BASE/QUOTE.
# Examples: BTC,ETH  or  BTC/USDT,ETH/USDT
ALLOWED_SYMBOLS=BTC,ETH,USDT

# Infra
DB_URL=sqlite:///data/trades.sqlite
REDIS_URL=redis://localhost:6379/0
LOG_LEVEL=INFO
# Explainability ledger JSONL path
EXPLAIN_LEDGER_PATH=explainability_ledger.jsonl

# API and rate limits
RATE_LIMIT_WINDOW=60
RATE_LIMIT_REQS=120
