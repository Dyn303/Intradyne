FROM python:3.11-slim AS base

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PYTHONPATH=/app/src

WORKDIR /app

RUN apt-get update \
    && apt-get install -y --no-install-recommends build-essential curl \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt \
    && pip install --no-cache-dir pytest uvicorn ruff mypy

COPY . .

# Create non-root user
RUN useradd -ms /bin/bash appuser \
    && chown -R appuser:appuser /app
USER appuser

# Optional: load env file inside container when present
ENV ENV_FILE=.env

EXPOSE 8000

HEALTHCHECK --interval=10s --timeout=3s --retries=5 CMD curl -fsS http://localhost:8000/healthz || exit 1

CMD ["uvicorn", "intradyne.api.app:app", "--host", "0.0.0.0", "--port", "8000"]
